<div class="container">
	<div class="col-md-6">
		<%= render_product_photo(@product.default_photo) %>
	</div>
	<div class="col-md-6">
		<h2><%= @product.name %></h2>
		<p><small>剩餘數量</small> <span class="badge"><%= @product.quantity %></span></p>
		<p><%= @product.description %></p>
		<hr/>
		<p><span style="font-size:2em; color:#E53638;"><%= @product.price %></span> 元</p>
		<hr/>
		<div class="pull-right">
			<%= link_to '加入購物車', '#', :class => "btn btn-danger" %>
		</div>
	</div>
</div>
