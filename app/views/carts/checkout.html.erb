<h1>結帳頁面</h1>
<div class="container">
	<h3>購物清單</h3>
	<hr>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th class="col-md-6">名稱</th>
					<th class="col-md-2">金額</th>
					<th class="col-md-2">數量</th>
				</tr>
			</thead>
			<% current_cart.cart_items.each do |item| %>
				<tr>
					<td><%= link_to item.product.name, product_path(item.product) %></td>
					<td><%= item.product.price %></td>
					<td><%= item.quantity %></td>
				</tr>
			<% end %>
		</table>
	</div>
	<hr/>
	<div class="row">
		<p class="pull-right">總計： <%= render_cart_total_price current_cart %> 元</p>
	</div>
	<hr/>
</div>
<div class="container">
	<h3>訂購者資訊</h3>
	<hr>
	<div class="container">
		<%= simple_form_for @order do |f| %>
			<%= f.simple_fields_for :info do |i| %>
				<div class="container">
					<h4>訂購人</h4>
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 form-group">
						<%= i.input :billing_name, :label => " 訂購人", :input_html => { :class => "form-control"} %>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 form-group">
						<%= i.input :billing_address, :label => " 訂購人地址", :input_html => { :class => "form-control"} %>
					</div>
				</div>
				<hr/>
				<div class="container">
					<h4>收件人</h4>
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 form-group">
						<%= i.input :shipping_name, :label => " 收件人", :input_html => { :class => "form-control"} %>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 form-group">
						<%= i.input :shipping_address, :label => " 收件人地址", :input_html => { :class => "form-control"} %>
					</div>
				</div>
				<hr/>
				<div class="container">
					<div class="row">
						<div class="btn-group pull-right">
							<%= link_to carts_path , :class => "btn btn-default " do %>
								<i class="glyphicon glyphicon-chevron-left"></i> 返回修改
							<% end %>
							<%= f.submit "生成訂單", :class => "btn btn-danger pull-right", :disable_with => 'Submiting...' %>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>